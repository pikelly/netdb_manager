<% form_for @subnet do |f| %>
  <%= f.error_messages %>
  <p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :domain %><br />
  <%= f.collection_select :domain_id, Domain.all, :id, :name %>
  </p>
  <p>
  <%= f.label :number %><br />
  <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :mask %><br />
  <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :ranges %><br />
  <%= f.text_field :name, :title => ""A list of comma separated single IPs or start-end couples."" %>
  </p>
  <p>
  <%= f.label :priority %><br />
  <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :vlanid %><br />
  <%= f.text_field :name %>
  </p>
  <p>
  <p><%= f.submit "Submit" %></p>

  <% unless @subnet.new_record? -%>
    Used by <%= @subnet.hosts.count %> hosts
  <% end -%>
<% end %>
